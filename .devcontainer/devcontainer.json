{
  "name": "Harp-Diem Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "remoteEnv": {
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-playwright.playwright",
        "vitest.explorer",
        "burkeholland.simple-react-snippets",
        "christian-kohler.path-intellisense",
        "formulahendry.auto-rename-tag",
        "anthropics.claude-code"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.useFlatConfig": true,
        "typescript.tsdk": "node_modules/typescript/lib",
        "typescript.enablePromptUseWorkspaceTsdk": true
      }
    }
  },
  "forwardPorts": [5173, 4173, 9323],
  "portsAttributes": {
    "5173": { "label": "Vite Dev Server", "onAutoForward": "notify" },
    "4173": { "label": "Vite Preview", "onAutoForward": "silent" },
    "9323": { "label": "Playwright UI", "onAutoForward": "silent" }
  },
  "postCreateCommand": "npm install && npx playwright install chromium --with-deps && npm run prepare && npm install -g @anthropic-ai/claude-code",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand",
  "remoteUser": "node"
}
